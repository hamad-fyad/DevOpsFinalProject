        //                     sh "${scannerHome}/bin/sonar-scanner"
        //                     }
        //                 }
                        
        //             }
        //         }
        //     }
            
        // } 
        // stage('Quality Gate') {
        //     steps {
        //         script {
        //             // Wait for SonarQube analysis to be completed
        //             timeout(time: 5, unit: 'MINUTES') {
        //                 def qg = waitForQualityGate()
